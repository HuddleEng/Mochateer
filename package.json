{
    "name": "muppeteer",
    "version": "1.2.2",
    "description": "Visual regression testing framework for running UI tests in Chrome",
    "main": "lib/configureLauncher.js",
    "scripts": {
        "test": "npm run unit-tests; npm run e2e-tests",
        "unit-tests": "jest --testPathPattern=\"^((?!e2e-tests|examples).)*$\"",
        "e2e-tests": "node e2e-tests/index.js",
        "example-unit-tests": "node examples/run-tests.js -u",
        "example-e2e-tests": "node examples/run-tests.js -e",
        "postinstall": "node examples/setup.js",
        "lint": "eslint **/*.js --fix --ignore-pattern node_modules",
        "prettier": "prettier --write --single-quote --tab-width=4 */**.js",
        "precommit": "lint-staged",
        "update-docker-chrome": "./update-docker-chrome.sh"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write --single-quote --tab-width=4",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HuddleEng/Muppeteer.git"
    },
    "author": "Gideon Pyzer / Huddle",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/HuddleEng/Muppeteer/issues"
    },
    "homepage": "https://github.com/HuddleEng/Muppeteer#readme",
    "dependencies": {
        "chai": "^4.1.2",
        "colors": "^1.1.2",
        "commander": "^2.15.1",
        "extract-zip": "^1.6.6",
        "glob-promise": "^3.4.0",
        "mkdirp": "^0.5.1",
        "mocha": "^5.0.0",
        "mocha-junit-reporter": "^1.17.0",
        "mocha-multi-reporters": "^1.1.7",
        "mochawesome": "^3.0.2",
        "pixelmatch": "^4.0.2",
        "pngjs": "^3.3.2",
        "puppeteer": "1.2.0",
        "puppeteer-extensions": "^1.0.0",
        "recursive-readdir-sync": "^1.0.6",
        "request": "^2.83.0",
        "request-promise-native": "^1.0.5",
        "shelljs": "^0.8.1",
        "yargs": "^11.0.0"
    },
    "devDependencies": {
        "eslint": "^4.18.2",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "express": "^4.16.2",
        "husky": "^0.14.3",
        "jest": "^22.4.2",
        "lint-staged": "^7.0.0",
        "minimist": "^1.2.0",
        "prettier": "^1.11.1"
    }
}
